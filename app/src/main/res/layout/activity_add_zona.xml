<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
android:paddingBottom="2dp"
android:paddingLeft="2dp"
android:paddingRight="2dp"
android:paddingTop="2dp"
android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="com.path.safe.safepath.AddZona">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100">

    <fragment
        android:id="@+id/mi_mapa_addZona"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentEnd="true"
        android:layout_weight="85"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:weightSum="5">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.19"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textSize="14dp"
            android:text="Inseguridad:"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Baja"
            android:textColor="#FFC107"
            android:background="#FFF9C4"
            android:id="@+id/btn_cal_bajo"
            android:nestedScrollingEnabled="false" />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Media"
            android:textColor="#E65100"
            android:background="#FFE0B2"
            android:id="@+id/btn_cal_medio"/>
        <Button
            android:layout_width="0dp"
            android:text="Alta"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#F44336"
            android:background="#FFCDD2"
            android:id="@+id/btn_cal_alto"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal"
        android:weightSum="7">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.30"
            android:layout_gravity="center_vertical"
            android:textSize="12dp"
            android:text="Radio:"/>
        <SeekBar
            android:id="@+id/seekBar_radio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.02"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:max="100" >
        </SeekBar>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="14dp"
            android:textColor="#01579B"
            android:id="@+id/pop_addDescription"
            android:text="Añadir descripción?"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="#E53935"
        android:textColor="#FFFFFF"
        android:text="CONFIRMAR"
        android:id="@+id/btn_confirmarAddZona"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>

</FrameLayout>
